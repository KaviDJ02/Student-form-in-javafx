<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.student.controller.StudentController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="studentIDField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Button text="Retrieve" onAction="#onRetrieveButtonClick" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Course:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="courseField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Update" onAction="#onUpdateButtonClick" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label fx:id="messageLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>